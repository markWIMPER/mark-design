{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "commit": true,
    "commitMessage": "chore: release ${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "pushRepo": "origin"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  }
}
